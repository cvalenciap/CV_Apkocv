<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.TerminosCondicionesActivity">
    <include layout="@layout/view_toolbar_close"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:orientation="vertical">

            <WebView
                android:id="@+id/wbTermsCond"
                android:layout_marginTop="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btnAceptoTerminos"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="24dp"
                android:text="@string/lbl_btn_acepto_terminos"
                android:textColor="@android:color/white"
                android:background="@drawable/ripple_round_border_button_blue"
                />

            <TextView
                android:id="@+id/txtDeclinar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textColor="@color/colorActivate"
                android:lineSpacingExtra="8sp"
                android:layout_gravity="center"
                android:text="@string/lbl_declinar"
                />

        </LinearLayout>
    </ScrollView>
</LinearLayout>