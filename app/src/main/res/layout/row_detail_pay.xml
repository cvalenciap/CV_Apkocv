<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llContentDetailPay"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:paddingTop="8dp"
    android:orientation="vertical">

    <RelativeLayout
        android:weightSum="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp"
        >

        <TextView
            android:id="@+id/txtFechaPagoDetail"
            android:layout_weight="0.3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbl_fecha_pago_realizado"
            android:textColor="@color/text_color_primary"
            android:textSize="12sp"
            android:fontFamily="@string/font_family_medium"
            />

        <TextView
            android:id="@+id/txtMontoPagoDetail"
            android:layout_weight="0.3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbl_monto_total_detalle"
            android:textColor="@color/text_color_primary"
            android:textSize="12sp"
            android:layout_alignParentRight="true"
            android:fontFamily="@string/font_family_medium"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp"
        >

        <TextView
            android:id="@+id/txtFormaPagoDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_secondary"
            android:textSize="12sp"
            android:gravity="right"
            />

        <TextView
            android:id="@+id/txtLugarPagoDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_secondary"
            android:textSize="12sp"
            android:gravity="right"
            android:layout_marginLeft="32dp"
            android:layout_toRightOf="@+id/txtFormaPagoDetail"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <!--<View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@android:color/darker_gray" />-->
</LinearLayout>
