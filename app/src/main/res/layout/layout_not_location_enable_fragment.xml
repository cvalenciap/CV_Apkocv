<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/fondo_seccion"
              android:gravity="center"
              android:id="@+id/llNotPermission"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:background="@drawable/ic_position_row">
    </RelativeLayout>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            android:textColor="@color/text_color_primary"
            android:gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:text="@string/lbl_habilitar_gps"
    />

    <TextView
            android:id="@+id/txtDetallePermisoPendiente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginTop="8dp"
            android:fontFamily="@string/font_family_light"
            android:textStyle="normal"
            android:textColor="@color/text_color_secondary"
            android:gravity="center_horizontal"
            android:text="@string/lbl_descripcion_gps"
    />

    <Button
        android:id="@+id/btnReintentarGps"
        android:textColor="@color/color_white"
        android:text="Reintentar"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_blue_background"
        android:layout_width="180dp"
        android:layout_height="38dp" />

</LinearLayout>