<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".ui.activity.PaySuccessActivity">

    <include layout="@layout/view_toolbar_close_not_background" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp">

        <LinearLayout
            android:id="@+id/llResultPagoOk"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/llActions"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imvIcono"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="40dp"
                android:layout_below="@+id/txtTittle"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_correct_dialog" />

            <TextView
                android:id="@+id/txtTittle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center_horizontal"
                android:text="Registro completado"
                android:textColor="@color/text_color_primary"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtDescripcionMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imvIcono"
                android:layout_marginTop="35dp"
                android:fontFamily="@string/font_family_light"
                android:gravity="center"
                android:text="DescripciÃ³n"
                android:textColor="@color/text_color_secondary"
                android:textSize="16sp"
                android:textStyle="normal" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llActions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:fontFamily="@string/font_family_light"
                android:gravity="center_horizontal"
                android:text="@string/lbl_not_receive_cod_confirm"
                android:textColor="@color/text_color_primary"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtSendConfirmCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="8sp"
                android:padding="15dp"
                android:layout_marginBottom="30dp"
                android:text="@string/lbl_resend_cod_confirm"
                android:textColor="@color/colorActivate"
                android:textSize="16sp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="32dp"
                android:background="@drawable/ripple_round_border_button_blue"
                android:text="Ingresar"
                android:textColor="@color/White" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>